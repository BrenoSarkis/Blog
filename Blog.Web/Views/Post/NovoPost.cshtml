@model Blog.Web.Models.NovoPostViewModel

<div ng-app="PostApp" ng-controller="PostController">
    <form id="formularioNovoPost" data-ng-submit="salvar()" action="#" class="sky-form">
        <header>Novo Post</header>
        <fieldset>
            <div class="row">
                <section class="col col-8">
                    <label class="label">Título</label>
                    <label class="input">
                        <input type="text" name="textBoxTitulo" ng-model="post.Titulo">
                    </label>
                </section>
                <section class="col col-2">
                    <label class="label">Tags</label>
                    <label class="input">
                        <input type="text" name="textBoxTag" ng-model="post.Tag" />
                    </label>
                </section>
                <section class="col col-2">
                    <label></label>
                    <div class="">
                        <input id="botaoDeAdicionarTag" type="button" value="Adicionar" class="btn-u btn-u-blue" ng-click="adicionarTag()" />
                    </div>
                </section>
            </div>
            <section>
               <table>
                   <tr>
                       <td ng-repeat="tag in post.Tags track by $index" style="padding-right:15px;"><a class="glyphicon glyphicon-tag" ng-click="removerTag($index)" style="text-decoration:none;"></a> {{ tag }}</td>
                   </tr>
               </table>
            </section>
            <textarea id="textAreaConteudoPost" ck-editor ng-model="post.Conteudo"></textarea>
        </fieldset>
        <footer>
            <button type="submit" class="btn-u">Salvar</button>
            <button type="button" class="btn-u btn-u-default" onclick="window.history.back();">Voltar</button>
        </footer>
    </form>
</div>

<script src="~/Scripts/app/PostController.js"></script>