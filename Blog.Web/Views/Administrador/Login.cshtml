@model Blog.Web.Models.LoginViewModel

@using (Html.BeginForm("Login", "Administrador", FormMethod.Post))
{
    <div id="formularioDeLogin" class="sky-form">
        <header>Entrar</header>

        <fieldset>
            <section>
                <div class="row">
                    <label class="label col col-4">E-mail</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            @Html.TextBoxFor(model => model.Email)
                        </label>
                    </div>
                </div>
            </section>

            <section>
                <div class="row">
                    <label class="label col col-4">Senha</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            @Html.PasswordFor(model => model.Senha)
                        </label>
                        <div class="note"><a href="" class="modal-opener">Forgot password?</a></div>
                    </div>
                </div>
            </section>
        </fieldset>
        <footer>
            <button id="botaoEntrar" type="submit" class="btn-u">Entrar</button>
        </footer>
    </div>
}
