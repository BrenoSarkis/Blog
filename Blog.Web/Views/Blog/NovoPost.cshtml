@model Blog.Web.Models.NovoPostViewModel

<div>
 @using (Html.BeginForm("Salvar", "Blog", FormMethod.Post, new { @class= "sky-form" }))
 {
     @Html.HiddenFor(model => model.Url)
        <header>Novo Post</header>
        <fieldset>
            <section class="col col-8" style="padding:0px;">
                <label class="label">Título</label>
                <label class="input">
                    @Html.TextBoxFor(model => model.Titulo)
                </label>
            </section>
            <section class="col col-2">
                <label class="label">Tags</label>
                <label class="input">
                    @*<input type="text" name="textBoxTag" />*@
                </label>
            </section>
            <section class="col col-2">
                <label></label>
                <div class="">
                    <input id="botaoDeAdicionarTag" type="button" value="Adicionar" class="btn-u btn-u-blue" />
                </div>
            </section>
            <section>
                <table>
                    <tr>
                        @foreach (var tag in Model.Tags)
                        {
                            <td style="padding-right:15px;"><a class="glyphicon glyphicon-tag" style="text-decoration:none;"></a> @tag</td>
                        }
                    </tr>
                </table>
            </section>
            <section class="col-8">
                <label class="label">Imagem da capa</label>
                <label class="input">
                    @Html.TextBoxFor(model => model.CaminhoDaImagemDaCapa)
                </label>
            </section>
            <div class="row">
                <section>
                    @Html.TextAreaFor(model => model.Conteudo, new { @class = "ckeditor" })
                </section>
            </div>
        </fieldset>

        <footer>
            <button id="btnSalvarNovoPost" type="submit" class="btn-u">Salvar</button>
            <button type="button" class="btn-u btn-u-default" onclick="window.history.back();">Voltar</button>
        </footer>
 }
</div>

