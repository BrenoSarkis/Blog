@using Blog.Web.Models

@model PrincipalViewModel

<div class="row">
    <!-- Blog All Posts -->
    <div class="col-md-9">
        @using (Html.BeginForm("Index", "Blog", FormMethod.Get, new { paginaAtual = Model.PaginaAtual }))
        {
            @Html.HiddenFor(model => model.PaginaAtual)
            foreach (var post in Model.Posts)
            {
                if (post.CaminhoDaImagemDaCapa != null)
                {
                    <div class="row blog blog-medium margin-bottom-40">
                        <div class="col-md-5">
                            <img class="img-responsive" src="@post.CaminhoDaImagemDaCapa">
                        </div>
                        <div class="col-md-7">
                            <h3><a href="~/@post.Url">@post.Titulo</a></h3>
                            <ul class="list-unstyled list-inline blog-info">
                                <li><i class="fa fa-calendar"></i> @post.DataPorExtenso</li>
                                <li><i class="fa fa-comments"></i> <a href="#">@post.ContagemDeComentarios Comentários</a></li>
                                <li><i class="fa fa-tags"></i> @post.Tags</li>
                            </ul>
                            <div>
                                @Html.Raw(post.Conteudo)
                            </div>
                            <p><a class="btn-u btn-u-sm" href="~/@post.Url">Continuar<i class="fa fa-angle-double-right margin-left-5"></i></a></p>
                        </div>
                    </div>
                    <div class="clearfix margin-bottom-20"><hr></div>
                }
                else
                {
                    <div class="row blog blog-medium margin-bottom-40">
                        <div class="col-md-12">
                            <h3><a href="~/@post.Url">@post.Titulo</a></h3>
                            <ul class="list-unstyled list-inline blog-info">
                                <li><i class="fa fa-calendar"></i> @post.DataPorExtenso</li>
                                <li><i class="fa fa-comments"></i> <a href="#">@post.ContagemDeComentarios Comentários</a></li>
                                <li><i class="fa fa-tags"></i> @post.Tags</li>
                            </ul>
                            <div>
                                @Html.Raw(post.Conteudo)
                            </div>
                            <p><a class="btn-u btn-u-sm" href="~/@post.Url">Continuar<i class="fa fa-angle-double-right margin-left-5"></i></a></p>
                        </div>

                    </div>
                    <div class="clearfix margin-bottom-20"><hr></div>
                }
            }
            <!-- Pager v3 -->
            <ul class="pager pager-v3 pager-sm no-margin-bottom">
                <li class="next"><input type="submit" name="botao" value="Novos →" /></li>
                <li class="page-amount">1 de @Model.QuantidadeDePaginas</li>
                <li class="previous"><input type="submit" name="botao" value="← Antigos" /></li>
            </ul>
            <!-- End Pager v3 -->
        <!-- End Blog All Posts -->
        }
    </div>
    <!-- Blog Sidebar -->
    @{ Html.RenderAction("BarraLateral"); }
    <!-- End Blog Sidebar -->
</div>
